{
  "name": "monorepo-stream-deployment",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start:web": "bun run db:push && cd apps/web && bun run start",
    "db:push": "cd packages/db && bunx prisma db push && cd ../..",
    "start:build": "cd apps/web && bun run build",
    "start:backend": "cd apps/backend && bun run start",
    "start:ws": "cd apps/websocket && bun run start",
    "db:generate": "cd packages/db && bunx prisma generate",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.16",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
